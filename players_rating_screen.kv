<PlayersRatingScreen>
    name: "PlayersRatingScreen"

    AnchorLayout:
        id: outer_centring_box
        anchor_x: "center"
        anchor_y: "center"
        canvas:
            Color:
                rgba: app.background_color
            Rectangle:
                pos: self.pos
                size: self.size

        BorderedBoxLayout:
            id: main_box
            orientation: "vertical"
            size_hint: .95, .98

            BorderedBoxLayout:
                orientation: "horizontal"
                size_hint: 1, .1

                AnchorLayout:
                    anchor_x: "center"
                    anchor_y: "center"
                    size_hint: .3, 1

                    Button:
                        id: back_button
                        background_normal: app.back_icon
                        background_down:'img/left_arrow_black.png'
                        border: 0, 0, 0, 0
                        on_press: root.to_points_calculation_screen()
                        size_hint: .63, .75

                Label:
                    id: header_text
                    text: "[b]Рейтинг[/b]"
                    font_size: dp(25)
                    markup: True
                    halign: "center"
                    color: app.text_color

                AnchorLayout:
                    anchor_x: "center"
                    anchor_y: "center"
                    size_hint: .3, 1

            BoxLayout